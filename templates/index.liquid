<style>
	.grid__item {	padding-left: 10px; }
</style>


{% comment %}
  Track how many sections are shown
{% endcomment %}
{% assign number_of_index_sections = 0 %}

{% if settings.home_section_1 != blank %}
  {% assign number_of_index_sections = number_of_index_sections | plus: 1 %}
  {% include settings.home_section_1, section_number: 1 %}
{% endif %}

<!-- New Arrivals and reopen wrapper-->
</div>
<div id="RecNewArrivals" class="rec-wrapper black-bg">
	<div class="rec-head-wrap">
		<span class="new-arrivals black-bg">Featured Products</span>
		<div class="view-more-mob">
		    <a href="/collections/featured?page=2" class="vm-mob-link-dark">view more <strong>⟩</strong></a>
		</div>
	</div>
	<div class="scrollyeah new-arr-home">
	  {% assign counter = 0 %}
	  {% assign products = collections.featured.products %}
	  {% for product in products %}
	    {% if counter < 100 and product.available %}
	      {% include 'rec-float-item' with product %}
	      {% assign counter = counter | plus: 1 %}
	    {% endif %}
	  {% endfor %}
	</div>
	<div class="scrollyeah-left">
		<a href="javascript:void(0)" class="scrollyeah-left-link dark-btn no-border"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>
	</div>
	<div class="view-more-arr view-more">
	    <a href="/collections/featured?page=2" class="link-button dark-btn">View more</a>
	</div>
	<div class="scrollyeah-right">
		<a href="javascript:void(0)" class="scrollyeah-right-link dark-btn no-border"><i class="fa fa-chevron-right" aria-hidden="true"></i></a>
	</div>
</div>
<div class="wrapper">
<!-- End New Arrivals and reopened wrapper-->


<!-- Featured Collections and reopen wrapper-->
</div>
